generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Doc {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  domainId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String

  @@index([domainId])
}