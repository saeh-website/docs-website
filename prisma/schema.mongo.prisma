generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/mongo"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}


datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Doc {
  id String @id @map("_id") @db.ObjectId @default(auto())
  title     String
  content   String
  domainId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String

  @@index([domainId])
}